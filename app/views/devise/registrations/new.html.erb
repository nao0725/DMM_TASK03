<main>
<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
        <h2>Sign up</h2>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>

         <div class="field">
          <label for="user_name">Name</label><br>
            <%= f.label :name %><br />
              <%= f.email_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field">
            <label for="user_email">Email</label><br>
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
          <label for="user_password">Password</label>
            <em>(6 characters minimum)</em>
            <br>
          <input autocomplete="off" class="password" type="password" name="user[password]" id="user_password">
          </div>

          <div class="field">
            <label for="user_password_confirmation">Password confirmation</label><br>
            <input autocomplete="off" class="password_confirm" type="password" name="user[password_confirmation]" id="user_password_confirmation">
          </div>

          <div class="actions">
            <input type="submit" name="commit" value="Sign up" class="btn btn-sm btn-success" data-disable-with="Sign up">
          </div>

      <a href="/users/sign_in">Log in</a><br>
      </div>
    </div>
  </div>
</main>

<% end %>