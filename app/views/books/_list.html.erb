 <script src="https://kit.fontawesome.com/f03fd448b3.js" crossorigin="anonymous"></script>
 
 <h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size:'80x80' %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
	      <th>name</th>
	      <th><%= user.name ,class: "form-control"%></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= user.introduction ,class: "form-control" %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_user_path(user) , class:"btn btn-outline-secondary btn-block fas fa-user-cog"%>
  </div>

  <h2 class="mt-3">New book</h2>
    <%= form_with model: book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body %>
      </div>

        <%= f.submit 'Create Book', class:"btn btn-secondary  bg-success text-white" %>

    <% end %>