

<script src="https://kit.fontawesome.com/f03fd448b3.js" crossorigin="anonymous"></script>


<main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <table class="table">
            <%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpeg" %>
          <body>
	          <p>name</p>
	          <%= @user.name %>
	          <p>introduction</p>
	          <%= @user.introduction %>
        <tbody>
        </table>
        </div>
      </div>
    </div>
    <div class="row">
      <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_135" href="/users/135/edit"></a>
      <!--変換するとエラーになる　↓↓↓-->
      <%#= link_to "Edit" edit_user_path,class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
    </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
           <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
        </div>
        <% end %>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <!--表示されない問題を解決できない↓-->
                <td><%= attachment_image_tag book.user, :profile_image %></td>
                <td><%= link_to "book.title" yse %></td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
   </main>
