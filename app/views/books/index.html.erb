

<script src="https://kit.fontawesome.com/f03fd448b3.js" crossorigin="anonymous"></script>

<main>
  <div class = "container">
    <%= render 'books/list',locals:{ book: @book,user: @user} %>
    <div class = "row">
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
                <td><%= attachment_image_tag book.user, :profile_image %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        </div>
        </div>
      </div>
   </main>
